@using Models1.Model;


@model PagedList<AssortmentClass>
@{
}
<a asp-action="Basket"><button>Оформить</button></a>
<br />

<div class="container text-center">
    <div class="row align-items-start">
        <div class="col-6">
            наименование
        </div>
        <div class="col-1">
            наличие
        </div>
        <div class="col-1">
            на удаленном складе
        </div>
        <div class="col-3">
            цена
        </div>
        <div class="col-1"></div>
    </div>
</div>
@foreach (var s in Model)
{
    <div class="row text-center">
        <div class="col-6 text-start">
            <span>@s.Name</span>
        </div>
        <div class="col-1">
            <span>@s.QuantityStock</span>
        </div>
        <div class="col-1">
            <span>@s.QuantityAllStok</span>
        </div>
        <div class="col-3">
            <span>@s.price</span>
        </div>
        <div class="col-1">
            <form asp-action="AddToBasket" method="post">
                <input type="hidden" value="@s.Id" name="id" />
                <input type="hidden" value="@Model.CurrentPage" asp-for="@Model.CurrentPage" />
                <input type="submit" value="+" />
            </form>
        </div>
    </div>
    
}
@if (Model.HasPreviousPage())
{
    <a asp-action="Privacy" asp-route-page="@(Model.CurrentPage-1)">
        <button>
            назад
        </button>
    </a>
}
@if (Model.HasNextPage())
{
    <a asp-action="Privacy" asp-route-page="@(Model.CurrentPage+1)">
        <button>
            вперед
        </button>
    </a>
}