@using Models1.Model;


@model PagedList<PositionClass>
@{
}
    <a asp-action="Basket"><button>Оформить</button></a>
    <br />

@foreach(var s in Model)
{
    <span>@s.Name</span>
    <form asp-action="AddToBasket" method="post">
        <input type="hidden" value="@s.Id" name="id"/>
        <input type="hidden" value="@Model.CurrentPage" asp-for="@Model.CurrentPage"/>
    <input type="submit" value="+"/>
    </form>
     <br />
}
@if (Model.HasPreviousPage())
{
    <a asp-action="Privacy" asp-route-page="@(Model.CurrentPage-1)">
        <button>
        назад
        </button>
        </a>
}
@if (Model.HasNextPage())
{
    <a asp-action="Privacy" asp-route-page="@(Model.CurrentPage+1)">
        <button>
        вперед
        </button>
        </a>
}