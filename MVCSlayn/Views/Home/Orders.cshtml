@using Models1.Model;


@model PagedList<OrderClass>
@{
}
 <form method="post" collor="#FFFFFF" >
@foreach(var s in Model)
{
    <p>
   <button class="btn btn-default" type="button" data-bs-toggle="collapse" data-bs-target="#order-@s.Id" aria-expanded="false" collor="#FFFFFF">
@s.Name , @s.DateСreation , @(s.sum/100) , @s.Status
</button>
</p>
<div class="collapse" id="order-@s.Id">
    <div class="container text-center">
    <div class="row align-items-start">
        <div class="col-6">
            наименование
        </div>
        <div class="col-1">
            количество
        </div>
        <div class="col-1">
            цена
        </div>
        <div class="col-3">
            оформить возврат
        </div>
         <div class="col-1"></div>
        </div>
    </div>
    @foreach(var pos in s.positions)
        {
            
        <div class="card card-body">
                    
               <div class="container text-center">
    <div class="row align-items-start">
        <div class="col-6">
            @pos.Name
        </div>
        <div class="col-1">
            @pos.OldQuantity
        </div>
        <div class="col-1">
            @(pos.priceOldOrder/100) руб.
        </div>
        <div class="col-3">
          <form asp-action="ReturnPositionsOrder" method="post">
                        <input type="hidden" value="@s.Id" name="posId" />
                        <input type="hidden" value="@pos.Id" name="id" />
                        <input type="submit" value="Возврат" />
                    </form>
        </div>
        <div class="col-1"></div>
    </div>
</div>     
       
        </div>
        }
</div>
}
<p>
        <input type="submit" value="Отправить" />
</p>
</form>

@if (Model.HasPreviousPage())
{
    <a asp-action="Orders" asp-route-page="@(Model.CurrentPage-1)">
        <button>
        назад
        </button>
        </a>
}
@if (Model.HasNextPage())
{
    <a asp-action="Orders" asp-route-page="@(Model.CurrentPage+1)">
        <button>
        вперед
        </button>
        </a>
}